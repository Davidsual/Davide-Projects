        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="525">
    <Grid>
        <ListView HorizontalAlignment="Center"  Margin="10,137,10,10" VerticalAlignment="Center" x:Name="lsMyList" Width="497" Height="273">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBox x:Name="txtSearch" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="245"/>
        <Label Content="Type at least 3 char" HorizontalAlignment="Left" Margin="260,10,0,0" VerticalAlignment="Top" Width="172"/>
        <Button x:Name="btnConsume" Content="Consume two async methods and wait for result" HorizontalAlignment="Left" Margin="10,47,0,0" VerticalAlignment="Top" Width="497"/>
        <Label Content="- - -" HorizontalAlignment="Left" Height="26" Margin="10,87,0,0" VerticalAlignment="Top" Width="126" x:Name="lblTimer"/>

    </Grid>
</Window>
